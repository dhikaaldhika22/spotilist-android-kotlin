<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="24dp"
    android:backgroundTint="@color/secondary"
    android:shadowRadius="50"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_image"
            android:clipToOutline="true"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:transitionName="image"
            tools:src="@tools:sample/avatars"
            tools:targetApi="s" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14.5sp"
                android:textStyle="bold"
                android:transitionName="title"
                tools:text="10 Cara Merakit Komputer Sendiri di Rumah, Sudah Coba? " />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/gray"
                android:maxLines="2"
                android:textSize="11sp"
                android:textStyle="normal"
                android:transitionName="content"
                tools:text="Dengan mengetahui cara merakit komputer sendiri, maka Sahabat bisa jauh lebih puas untuk mendapatkan PC sesuai harapan.." />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>